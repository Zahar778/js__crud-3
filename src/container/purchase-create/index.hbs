{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class="main">
    {{#with data}}
<form method="POST" action="/purchase-submit?id={{id}}"></form>
    {{> heading title="Ваш заказ" }}

    <ul class="catr">
        {{#each cart}}
        <li class="cart__item">
            <span>{{text}}</span>
            <span>{{price}}</span>
        </li>
        {{/each}}
    </ul>

   {{>divider}}

    {{> heading title="Оформление заказа"}}

    {{>field label="Имя" name="firstname"}}

    {{>field label="Фомилия" name="lastname"}}

    {{>field label="Телефон" name="phone"}}

    {{>field label="Почта" name="email"}}

    {{>field label="Коментарий" name="comment"}}

    {{>field label="Списать бонусы" name="bonus"}}

    {{>field label="Промо-код" name="promocode"}}


    {{>field type="number " value=totalPrice name="totalPrice" disable=true}}
    {{>field value=productPrice name="productPrice" disable=true}}
    {{>field value=deliveryPrice name="deliveryPrice" disable=true}}


   <strong class="form-card__total">
    Всего: {{totalPrice}} грн ({{bonus}} грн бонусов)
   </strong>

   </form>
   {{/with}}
 </main>

