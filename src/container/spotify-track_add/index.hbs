<main class="main">
    {{#with data}}
    <div class="main__content">
    <h1 class="title title--center">Додати до плейлiста</h1>

   <ul class="track-list">
    {{#each tracks}}
    <li class="track">
        <img src="{{image}}" class="track__image">
        <div class="track__content">
            <strong class="track__title">{{name}}</strong>
            <p class="track__text">{{author}}</p>
        </div>
        <a href="/spotify-track_add?playlistId={{../playlistId}}&trackId={{id}}">
        <img src="/svg/tabler_plus.svg" class="track__icon" >
        </a>
        <form action="/spotify-track_add" method="POST">
        <input type="hidden" name="playlistId" value="{{../playlistId}}">
        <input type="hidden" name="trackId" value="{{id}}">
       
        </form>
    </li>
    {{/each}}
   </ul>
    {{/with}}
</main>